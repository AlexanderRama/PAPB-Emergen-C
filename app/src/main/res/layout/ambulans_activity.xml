<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context=".ambulansActivity" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/bg_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/opensaucebold"
        android:text="Pilih Jenis Layanan Ambulans"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/frameLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="418dp"
        android:layout_height="63dp"
        android:text="@string/ambulans1"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ambulans1"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_ambulans"
        android:layout_marginTop="18dp"
        android:paddingStart="40dp"
        android:enabled="true"
        android:fontFamily="@font/opensaucesemibold"
        android:textSize="15sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="418dp"
        android:layout_height="63dp"
        android:text="@string/ambulans2"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ambulans2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_ambulans2"
        android:paddingStart="40dp"
        android:fontFamily="@font/opensaucesemibold"
        android:textSize="15sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_width="418dp"
        android:layout_height="63dp"
        android:text="@string/ambulans3"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ambulans3"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_ambulans"
        android:paddingStart="40dp"
        android:fontFamily="@font/opensaucesemibold"
        android:textSize="15sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/btnharga"
            android:fontFamily="@font/opensaucebold"
            android:text="Tunai"
            android:layout_marginStart="20dp"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensaucebold"
            android:text="Gratis"
            android:layout_marginEnd="40dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:text="Proses Sekarang"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/opensaucesemibold"
        android:textSize="20sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>
