<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgframe"
    tools:context=".SosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="14dp"
            android:layout_height="20dp"
            android:background="@drawable/back2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frameLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Biodata"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="77dp"
            android:layout_marginBottom="22dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Tulis disini">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:fontFamily="@font/poppins_medium"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Telefon"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Tulis disini">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:fontFamily="@font/poppins_medium"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umur"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Tulis disini">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addumur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:fontFamily="@font/poppins_medium"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informasi Tambahan"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="18dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Tulis disini">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:fontFamily="@font/poppins_medium"
            android:lines="4"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonsave"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Simpan"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/opensaucemedium"
        android:textSize="18sp"
        android:textAllCaps="false"/>

</LinearLayout>
